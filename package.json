{
  "name": "autoscrolling",
  "version": "1.0.0",
  "description": "Browser extension for Firefox",
  "main": "background.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src",
    "start": "webpack -w --debug",
    "build": "gulp && webpack",
    "debug": "web-ext run",
    "gulp": "gulp watch",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write src/**/*.js",
      "git add"
    ],
    "gulpfile.js": [
      "prettier --write gulpfile.js",
      "git add"
    ],
    "webpack.config.js": [
      "prettier --write webpack.config.js",
      "git add"
    ],
    "manifest.json": [
      "prettier --write manifest.json",
      "git add"
    ],
    "package.json": [
      "prettier --write package.json",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pinkienort/AutoScrolling.git"
  },
  "keywords": [
    "webextension"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pinkienort/AutoScrolling/issues"
  },
  "homepage": "https://github.com/pinkienort/AutoScrolling#readme",
  "dependencies": {
    "spectre.css": "^0.5.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.7.0",
    "expect.js": "^0.3.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-ejs": "^3.2.0",
    "gulp-sass": "^4.0.1",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^1.0.0-rc.13",
    "json-loader": "^0.5.7",
    "lint-staged": "^7.2.2",
    "mocha": "^3.5.3",
    "prettier": "1.14.2",
    "style-loader": "^0.18.2",
    "webpack": "^3.12.0",
    "webpack-cli": "^3.1.0"
  }
}
