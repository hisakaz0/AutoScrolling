{
  "name": "autoscrolling",
  "version": "1.0.0",
  "description": "Browser extension for Firefox",
  "main": "background.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "npm run compile:webpack",
    "build": "gulp && webpack",
    "compile:webpack": "webpack -w --debug",
    "compile:gulp": "gulp watch",
    "debug": "web-ext run",
    "test": "karma start",
    "test:debug": "karma start --no-single-run --auto-watch",
    "lint": "eslint src",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write src/**/*.js",
      "git add"
    ],
    "tests/**/*.js": [
      "prettier --write tests/**/*.js",
      "git add"
    ],
    "gulpfile.js": [
      "prettier --write gulpfile.js",
      "git add"
    ],
    "webpack.config.js": [
      "prettier --write webpack.config.js",
      "git add"
    ],
    "manifest.json": [
      "prettier --write manifest.json",
      "git add"
    ],
    "package.json": [
      "prettier --write package.json",
      "git add"
    ],
    ".eslintrc.json": [
      "prettier --write .eslintrc.json",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pinkienort/AutoScrolling.git"
  },
  "keywords": [
    "webextension"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pinkienort/AutoScrolling/issues"
  },
  "homepage": "https://github.com/pinkienort/AutoScrolling#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "eslint": "^5.6.0",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-ejs": "^3.2.0",
    "gulp-sass": "^4.0.1",
    "html-loader": "^0.5.1",
    "husky": "^1.0.0-rc.13",
    "jasmine": "^3.2.0",
    "json-loader": "^0.5.7",
    "karma": "^3.0.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-jasmine": "^1.1.2",
    "karma-webpack": "^3.0.5",
    "lint-staged": "^7.2.2",
    "prettier": "1.14.3",
    "spectre.css": "^0.5.3",
    "web-ext": "^2.9.1",
    "webpack": "^3.12.0",
    "webpack-cli": "^3.1.0"
  }
}
